{
  "manifest_version": 3,
  "name": "Protocolos USF Vila Dutra â€” Sanfona",
  "version": "1.0.1",
  "description": "Protocolos do Firestore com busca inteligente e UI em sanfona (accordion).",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://firestore.googleapis.com/*",
    "https://*.googleapis.com/*",
    "https://*.gstatic.com/*"
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Protocolos (abrir painel lateral)"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "side_panel": {
    "default_path": "app.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
